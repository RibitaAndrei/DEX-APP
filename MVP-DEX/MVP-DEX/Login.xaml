<Window x:Class="MVP_DEX.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVP_DEX"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#FF473DA8">
        <TextBlock Text="Bine ati venit, va rugam sa va autentificati pentru a continua" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" Foreground="#FF54E64A" FontSize="22" FontWeight="Bold"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="308,139,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" Height="23" Margin="400,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="308,191,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.818,1.951" FontWeight="Bold"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="400,195,0,0" VerticalAlignment="Top" Width="120"/>
        <Button Content="Login" HorizontalAlignment="Left" Margin="400,244,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click" FontWeight="Bold"/>
    </Grid>
</Window>
